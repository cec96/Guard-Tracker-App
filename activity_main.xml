<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.conners.guardtracker.MainActivity"
    android:background="@drawable/poolmapcolor">

    <TextView
        android:layout_width="65sp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/spot_2_default"
        android:id="@+id/spot2"
        android:textColor="#000"
        android:background="#fff"
        android:padding="2dp"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/slideSpot1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="46dp"
        android:layout_marginStart="46dp" />
    
    <TextView
        android:layout_width="67sp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/slide_spot_2_default"
        android:id="@+id/slideSpot2"
        android:textColor="#000"
        android:background="#fff"
        android:padding="2dp"
        android:layout_below="@+id/spot5"
        android:layout_toRightOf="@+id/spot5"
        android:layout_toEndOf="@+id/spot5" />

    <TextView
        android:layout_width="67sp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:padding="2dp"
        android:text="@string/slide_spot_1_default"
        android:id="@+id/slideSpot1"
        android:textColor="#000"
        android:background="#fff"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/spot2"
        android:layout_toEndOf="@+id/spot2" />

    <TextView
        android:layout_width="67sp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/slide_spot_4_default"
        android:padding="2dp"
        android:id="@+id/slideSpot4"
        android:textColor="#000"
        android:background="#fff"
        android:layout_marginBottom="19dp"
        android:layout_above="@+id/slideSpot3"
        android:layout_toRightOf="@+id/slideSpot2"
        android:layout_toEndOf="@+id/slideSpot2" />

    <TextView
        android:layout_width="65sp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/slide_spot_5_default"
        android:id="@+id/spot5"
        android:textColor="#000"
        android:background="#fff"
        android:padding="2dp"
        android:layout_marginBottom="35dp"
        android:layout_above="@+id/slideSpot1"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="65sp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/break2_default"
        android:textColor="#000"
        android:background="#fff"
        android:padding="2dp"
        android:id="@+id/break2"
        android:layout_alignTop="@+id/break1"
        android:layout_toLeftOf="@+id/spot5"
        android:layout_toStartOf="@+id/spot5" />

    <TextView
        android:layout_width="65sp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/break1_text_default"
        android:textColor="#000"
        android:background="#fff"
        android:padding="2dp"
        android:id="@+id/break1"
        android:layout_alignBottom="@+id/addGuardButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="67sp"
        android:layout_height="wrap_content"
        android:text="@string/slide_spot_3_default"
        android:textColor="#000"
        android:background="#fff"
        android:padding="2dp"
        android:id="@+id/slideSpot3"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_above="@+id/spot5"
        android:layout_alignLeft="@+id/slideSpot2"
        android:layout_alignStart="@+id/slideSpot2"
        android:layout_marginBottom="12dp" />

    <TextView
        android:layout_width="65sp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/spot_3_default"
        android:id="@+id/spot3"
        android:textColor="#000"
        android:background="#fff"
        android:padding="2dp"
        android:layout_above="@+id/spot5"
        android:layout_toRightOf="@+id/spot1"
        android:layout_toEndOf="@+id/spot1" />

    <TextView
        android:layout_width="65sp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/spot_4_default"
        android:id="@+id/spot4"
        android:textColor="#000"
        android:background="#fff"
        android:padding="2dp"
        android:layout_marginBottom="28dp"
        android:layout_above="@+id/slideSpot4"
        android:layout_toRightOf="@+id/slideSpot1"
        android:layout_toEndOf="@+id/slideSpot1" />

    <TextView
        android:layout_width="65sp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/spot_1_default"
        android:id="@+id/spot1"
        android:textColor="#000"
        android:background="#fff"
        android:padding="2dp"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginBottom="25dp"
        android:layout_above="@+id/addGuardButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_guard_button_text"
        android:textColor="#fff"
        android:background="#33cc33"
        android:id="@+id/addGuardButton"
        android:onClick="onAddGuardClick"
        android:layout_marginBottom="45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/data_button_text"
        android:id="@+id/dataButton"
        android:onClick="onDataReport"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>

